<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:padding="20dp">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/res"
      android:textSize="60dp"
      android:textStyle="bold"
      android:textColor="@color/black"
      android:text="0"
      android:paddingHorizontal="15dp"
      android:paddingVertical="35dp"
      android:layout_above="@id/num"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/num"
        android:layout_alignParentBottom="true"
        android:paddingTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/on"
                android:text="ON"
                style="@style/button2"
               />
            <Button
                android:id="@+id/n7"
                android:text="7"
                style="@style/button1"
                />
            <Button
                android:id="@+id/n4"
                android:text="4"
                style="@style/button1"
                />
            <Button
                android:id="@+id/n1"
                android:text="1"
                style="@style/button1"
                />
            <Button
                android:id="@+id/del"
                android:text="DEL"
                style="@style/button2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/off"
                android:text="OFF"
                style="@style/button2"
                />
            <Button
                android:id="@+id/n8"
                android:text="8"
                style="@style/button1"
                />
            <Button
                android:id="@+id/n5"
                android:text="5"
                style="@style/button1"
                />
            <Button
                android:id="@+id/n2"
                android:text="2"
                style="@style/button1"
                />
            <Button
                android:id="@+id/n0"
                android:text="0"
                style="@style/button1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/ac"
                android:text="AC"
                style="@style/button2"
                />
            <Button
                android:id="@+id/n9"
                android:text="9"
                style="@style/button1"
                />
            <Button
                android:id="@+id/n6"
                android:text="6"
                style="@style/button1"
                />
            <Button
                android:id="@+id/n3"
                android:text="3"
                style="@style/button1"
                />
            <Button
                android:id="@+id/point"
                android:text="."
                style="@style/button2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/div"
                android:text="/"
                style="@style/button2"
                />
            <Button
                android:id="@+id/mul"
                android:text="*"
                style="@style/button2"
                />
            <Button
                android:id="@+id/add"
                android:text="+"
                style="@style/button2"
                />
            <Button
                android:id="@+id/soutr"
                android:text="-"
                style="@style/button2"
                />
            <Button
                android:id="@+id/egal"
                android:text="="
                style="@style/button2"
                />

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>